<?xml version="1.0" encoding="utf-8"?>
<!-- layout/*.xml -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vue_liste_c"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    >

    <ImageView
        android:id="@+id/imvfilm"
        android:layout_width="137dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/image_film"
        />

    <TextView
        android:id="@+id/txt_nomFilm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="@string/nom"
        android:textSize="20dp"
        android:textAppearance="@style/film"
        />

    <TextView
        android:id="@+id/txt_typeFilm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:text="@string/type"
        android:textAppearance="@style/other"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/txt_anneeFilm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:text="@string/annee"
        android:textAppearance="@style/other"
        />

    <TextView
        android:id="@+id/txt_prixFilm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:text="@string/prix"
        android:textAppearance="@style/other"
        />

    <TextView
        android:id="@+id/txt_synopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:text="Synopsis Film"
        android:textAppearance="@style/other"
        />





</android.support.v7.widget.CardView>